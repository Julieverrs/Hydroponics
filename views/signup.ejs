<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
</head>
<body>
    <h2>Sign Up</h2>
    <form id="signupForm">
        <input type="email" id="signupEmail" placeholder="Email" required>
        <input type="password" id="signupPassword" placeholder="Password" required>
        <button type="button" onclick="signup()">Sign Up</button>
    </form>
    
    <!-- Success/Error Message Display -->
    <p id="responseMessage"></p>

    <!-- Link to Login Page -->
    <button onclick="window.location.href='login.html'">Login Here</button>

    <script>
        async function signup() {
            const email = document.getElementById('signupEmail').value;
            const password = document.getElementById('signupPassword').value;

            // Clear any previous response message
            document.getElementById('responseMessage').textContent = '';

            // Send the POST request to the server
            const response = await fetch('/signup', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ email, password })
            });

            // Parse the JSON response from the server
            const result = await response.json();

            // Show the response message to the user
            const responseMessage = document.getElementById('responseMessage');
            responseMessage.textContent = result.message;

            // If registration is successful (status 201), clear the fields and redirect
            if (response.status === 201) {
                // Clear the email and password fields
                document.getElementById('signupEmail').value = '';
                document.getElementById('signupPassword').value = '';

                // Redirect after a short delay
                setTimeout(() => {
                    window.location.href = 'login.html';
                }, 2000); // 2 second delay
            }
        }
    </script>
</body>
</html>
